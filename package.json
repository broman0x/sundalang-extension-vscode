{
  "name": "sundalang-vscode-extension",
  "displayName": "SundaLang - Bahasa Pemrograman Sunda Pandeglang",
  "description": "VS Code extension for SundaLang: syntax highlighting, IntelliSense, snippets for Sunda programming language",
  "version": "1.0.1",
  "publisher": "bromanprjkt",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sundalang",
        "aliases": [
          "SundaLang",
          "sundalang"
        ],
        "extensions": [
          ".sl",
          ".sunda"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sundalang",
        "scopeName": "source.sunda",
        "path": "./syntaxes/sundalang.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sundalang",
        "path": "./snippets/sundalang.json"
      }
    ],
    "commands": [
      {
        "command": "sundalang.runFile",
        "title": "SundaLang: Run File",
        "icon": "$(play)"
      },
      {
        "command": "sundalang.newFile",
        "title": "SundaLang: New File from Template"
      },
      {
        "command": "sundalang.openRepl",
        "title": "SundaLang: Open REPL"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sundalang.runFile",
          "when": "resourceLangId == sundalang",
          "group": "navigation"
        }
      ],
      "editor/title/run": [
        {
          "command": "sundalang.runFile",
          "when": "resourceLangId == sundalang"
        }
      ]
    },
    "keybindings": [
      {
        "command": "sundalang.runFile",
        "key": "f5",
        "when": "resourceLangId == sundalang"
      },
      {
        "command": "sundalang.runFile",
        "key": "ctrl+r",
        "mac": "cmd+r",
        "when": "resourceLangId == sundalang"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/broman0x/sundalang-extension-vscode"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.75.0",
    "typescript": "^4.9.0"
  }
}